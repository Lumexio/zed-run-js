{
  "run-javascript": {
    "label": "Run JavaScript",
    "command": "node",
    "args": [
      "${file}"
    ],
    "working_directory": "${file_directory}",
    "environment": {},
    "only_in_file_paths": [
      "\\.js$"
    ],
    "terminal": {
      "reveal": "always",
      "focus": true
    }
  },
  "tasks": {
    "run-file": {
      "label": "Run File",
      "command": "sh",
      "args": [
        "${extension}/custom_runfile.sh"
      ],
      "description": "Compiles and runs the current code file",
      "terminal": {
        "reveal": "always"
      }
    }
  }
}